<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsp.dao.PassengerDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hsp.entity.PassengerEntity" id="passengerMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="wxNumber" column="wx_number"/>
        <result property="origin" column="origin"/>
        <result property="dest" column="dest"/>
        <result property="status" column="status"/>
        <result property="goDate" column="go_date"/>
        <result property="remark" column="remark"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <select id="listIncludeDel" resultType="com.hsp.entity.PassengerEntity">
        SELECT * FROM passenger
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="phone != null">
                and phone = #{phone}
            </if>
            <if test="wxNumber != null">
                and wx_number = #{wxNumber}
            </if>
            <if test="origin != null">
                and origin = #{origin}
            </if>
            <if test="dest != null">
                and dest = #{dest}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="goDate != null">
                and go_date = #{goDate}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
        </where>
    </select>

</mapper>